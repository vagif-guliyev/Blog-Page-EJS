<h1>Home</h1>

<p><%= homeStartingContent %></p>

<% posts.forEach(function(post) { %>
<%    let trimmed_post = post.content.substring(0, 100) + "..."; %>
    <h1><%= post.title %></h1>
    <p>
        <%= trimmed_post %> 
        <a href="/posts/<%= post.title %>" >Read more</a> 
    </p>
<% });                            %>            

